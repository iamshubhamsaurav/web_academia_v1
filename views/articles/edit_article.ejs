<!doctype html>
<html lang="zxx">
    <head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- Links Of CSS File -->
		<link rel="stylesheet" href="/assets/css/bootstrap.min.css">
		<link rel="stylesheet" href="/assets/css/flaticon.css">
		<link rel="stylesheet" href="/assets/css/remixicon.css">
		<link rel="stylesheet" href="/assets/css/animate.min.css">
		<link rel="stylesheet" href="/assets/css/font-awesome.min.css">
		<link rel="stylesheet" href="/assets/css/editor.css">
		<link rel="stylesheet" href="/assets/css/style.css">
		<link rel="stylesheet" href="/assets/css/responsive.css">
		
		<!-- Favicon -->
		<link rel="icon" type="image/png" href="/assets/images/favicon.png">
		<!-- Title -->
		<title>The Web Academia</title>
    </head>

    <body>
		<!-- Start Preloader Area -->
		<div class="preloader" id="loader-style">
			<div class="preloader-wrap">
				<span></span>
				<span></span>
				<span></span>
				<span></span>
			</div>
		</div>
		<!-- End Preloader Area -->
		
		<!-- Start Navbar Area --> 
		<%- include('../partials/head') %>
		<!-- End Navbar Area -->

		<!-- Start Mail Content Area -->
		<div class="main-content-area ptb-100">
			<div class="container">
				<div class="row">
					<div class="col-lg-7">
						<div class="middull-content">
							<form class="your-answer-form" method="post" action="/api/v1/articles/<%= article._id %>/edit" enctype="multipart/form-data">
								
								<div class="form-group">
									<h3>Update Your Article</h3>
								</div>
								<div class="form-group">
									<label>Title</label>
									<input type="text" name="title" class="form-control" value="<%= article.title %>" required>
								</div>
								<div class="form-group">
									<label>Branch</label>

									<select name="branch" class="form-select form-control" aria-label="Default select example" required>
										<option value="dca" <%= article.branch == 'dca' ? 'selected' : ''%> >DCA</option>
										<option value="commerce" <%= article.branch == 'commerce' ? 'selected' : ''%> >Commerce</option>
										<option value="literature" <%= article.branch == 'literature' ? 'selected' : ''%> >Literature</option>
										<option value="science" <%= article.branch == 'science' ? 'selected' : ''%> >Science</option>
										<option value="others" <%= article.branch == 'others' ? 'selected' : ''%> >Others</option>
									</select>
								</div>
								<div class="form-group">
									<label>Subject</label>
									<input type="text" name="subject" class="form-control" value="<%= article.subject %>" required>
								</div>
								<div class="form-group">
									<label>Body</label><br/>
									<textarea  class="form-control" rows = "10"  name = "body" required><%= article.body %></textarea><br>
									<!-- <div id="txtEditor"></div> -->
								</div>
								<div class="form-group">
									<div class="file-upload-account-info">
										<!-- <input type="file" name="coverImage" id="file-2" class="inputfile"> -->
										<input type="file" name="coverImage" class="form-control" id="coverImage" required>
										<label class="upload">
											<i class="ri-link"></i>
											Upload New Cover Image
										</label>
									</div>
								</div>
								<div class="form-group">
									<button type="submit" class="default-btn">Save</button>
								</div>
							</form>
						</div>
					</div>

					<div class="col-lg-1">
					</div>

					<div class="col-lg-3">
						<div class="right-siderbar">
							<div class="right-siderbar-common">
								<a href="/api/v1/questions/add" class="default-btn">
									Ask a question
								</a>
							</div>

							<div class="right-siderbar-common">
								<a href="/api/v1/articles/add" class="default-btn">
									Publish an article
								</a>
							</div>

							<div class="right-siderbar-common">
								<div class="answer-count">
									<ul class="d-flex flex-wrap">
										<li>
											<span>Questions</span>
											<span class="count">435</span>
										</li>
										<li>
											<span>Answers</span>
											<span class="count">435</span>
										</li>
										<li>
											<span>Best answers</span>
											<span class="count">324</span>
										</li>
										<li>
											<span>Users</span>
											<span class="count">2K</span>
										</li>
										<li>
											<span>Posts</span>
											<span class="count">852</span>
										</li>
										<li>
											<span>Comments</span>
											<span class="count">57</span>
										</li>
									</ul>
								</div>
							</div>

							<div class="right-siderbar-common">
								<div class="recent-post">
									<h3>
										<i class="ri-discuss-line"></i>
										Recent post
									</h3>

									<ul>
										<% recentArticles.forEach(element => { %>
											<li>
											<a href="/api/v1/articles/<%= element._id %>">
												<%= element.title %>
											</a>
											<p>on <%= new Date(element.createdAt.toISOString()).toLocaleDateString() %>
												by <a href="user.html"><%= element.user.name %></a></p>
										</li>
										<% }) %>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- End Mail Content Area -->

		<!-- Start Footer Area -->
		<%- include('../partials/footer') %>
		<!-- End Footer Area -->


		<!-- Start Go Top Area -->
		<div class="go-top">
			<i class="ri-arrow-up-s-fill"></i>
			<i class="ri-arrow-up-s-fill"></i>
		</div>
		<!-- End Go Top Area -->

        <!-- Links of JS File -->
        <script src="/assets/js/jquery.min.js"></script>
        <script src="/assets/js/bootstrap.bundle.min.js"></script>
		<script src="/assets/js/meanmenu.min.js"></script>
		<script src="/assets/js/owl.carousel.min.js"></script>
		<script src="/assets/js/form-validator.min.js"></script>
		<script src="/assets/js/contact-form-script.js"></script>
		<script src="/assets/js/ajaxchimp.min.js"></script>
		<script src="/assets/js/metismenu.js"></script>
		<script src="/assets/js/editor.js"></script>
		<script src="/assets/js/like-dislike.min.js"></script>
		<script src="/assets/js/custom.js"></script>
    </body>
</html>